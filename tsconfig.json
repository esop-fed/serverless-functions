{
    "compilerOptions": {
        "module": "commonjs",
        "allowJs": true,
        "target": "esnext",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "public",  // TS文件编译后会放入到此文件夹内
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ],
            "api/*": ["api/*"]
        }
    },
    "include": [
        "src/**/*", "api/**/*"
    ]
}